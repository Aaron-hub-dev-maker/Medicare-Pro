@* Global Loading Overlay Partial *@
<div id="globalLoadingOverlay" style="display:none; position:fixed; top:0; left:0; width:100vw; height:100vh; background:rgba(25,118,210,0.12); z-index:2000; align-items:center; justify-content:center;">
    <div class="spinner-border text-primary" style="width:3rem; height:3rem;" role="status" aria-label="Loading">
        <span class="visually-hidden">Loading...</span>
    </div>
</div>

@section Scripts {
    <script>
        // Usage: showLoadingOverlay(); hideLoadingOverlay();
        window.showLoadingOverlay = function () {
            document.getElementById('globalLoadingOverlay').style.display = 'flex';
        };
        window.hideLoadingOverlay = function () {
            document.getElementById('globalLoadingOverlay').style.display = 'none';
        };
    </script>
} 