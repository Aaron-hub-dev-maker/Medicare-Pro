@using Hospitals.Utilities
@model PagedResult<Hospital.ViewModels.ApplicationUserViewModel>

@{
    ViewData["Title"] = "Users";
}

<div class="container py-4">
    <div class="card shadow-lg border-0 mb-4" style="border-radius: 1.25rem;">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2 class="fw-bold mb-0 text-gradient"><i class="fas fa-users me-2"></i>Users</h2>
            </div>
            <div class="table-responsive">
                <table class="table table-hover table-striped align-middle mb-0" style="border-radius: 1rem; overflow: hidden;">
                    <thead class="table-light">
                        <tr>
                            <th><i class="fas fa-user-md me-1"></i>IsDoctor</th>
                            <th><i class="fas fa-user me-1"></i>Name</th>
                            <th><i class="fas fa-id-badge me-1"></i>UserName</th>
                            <th><i class="fas fa-envelope me-1"></i>Email</th>
                            <th><i class="fas fa-venus-mars me-1"></i>Gender</th>
                            <th><i class="fas fa-city me-1"></i>City</th>
                            <th><i class="fas fa-user-graduate me-1"></i>Specialist</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Data) {
                            <tr>
                                <td>
                                    @if (item.IsDoctor)
                                    {
                                        <span class="badge bg-success">Doctor</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">User</span>
                                    }
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                <td>@Html.DisplayFor(modelItem => item.UserName)</td>
                                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                <td>@Html.DisplayFor(modelItem => item.Gender)</td>
                                <td>@Html.DisplayFor(modelItem => item.City)</td>
                                <td><span class="badge bg-info text-dark">@Html.DisplayFor(modelItem => item.Specialist)</span></td>
                                <td>
                                    @* Uncomment and style action buttons as needed *@
                                    @* <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm me-1" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm me-1" title="Details">
                                        <i class="fas fa-info-circle"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm" title="Delete">
                                        <i class="fas fa-trash-alt"></i>
                                    </a> *@
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="mt-3">
                <cs-pager cs-paging-pagesize=(int)Model.PageSize
                          cs-paging-pagenumber=(int)Model.PageNumber
                          cs-paging-totalitems=(int)Model.TotalItems
                          cs-pagenumber-param="pageNumber"
                          asp-controller="Users"
                          asp-action="Index"
                          cs-pager-li-current-class="page-item active"
                          cs-pager-li-other-class="page-item"
                          cs-pager-li-non-active-class="page-item disabled"
                          cs-pager-link-current-class="page-link"
                          cs-pager-link-other-class="page-link">
                </cs-pager>
            </div>
        </div>
    </div>
</div>

<style>
    .text-gradient {
        background: linear-gradient(90deg, #1976d2 0%, #67b26f 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        text-fill-color: transparent;
    }
    .table thead th {
        vertical-align: middle;
        font-weight: 600;
        font-size: 1.05rem;
    }
    .table-striped > tbody > tr:nth-of-type(odd) {
        background-color: #f8fbff;
    }
    .table-hover tbody tr:hover {
        background-color: #e3f0ff;
        transition: background 0.2s;
    }
    .badge {
        font-size: 0.98em;
        border-radius: 0.7em;
        padding: 0.5em 0.9em;
    }
</style>

