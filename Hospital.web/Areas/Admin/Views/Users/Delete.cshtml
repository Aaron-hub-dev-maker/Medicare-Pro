@model Hospital.ViewModels.ApplicationUserViewModel

@{
    ViewData["Title"] = "Delete Doctor";
}

<div class="container py-4">
    <div class="card shadow-lg border-0" style="border-radius: 1.25rem;">
        <div class="card-body">
            <div class="text-center mb-4">
                <i class="fas fa-exclamation-triangle text-warning" style="font-size: 3rem;"></i>
                <h1 class="mt-3 text-danger">Delete Doctor</h1>
            </div>

            <div class="alert alert-warning" role="alert">
                <h5><i class="fas fa-exclamation-triangle me-2"></i>Warning</h5>
                <p class="mb-0">Deleting this doctor will also remove all associated:</p>
                <ul class="mb-0 mt-2">
                    <li>Appointments</li>
                    <li>Timings/Schedules</li>
                    <li>Patient Reports</li>
                </ul>
            </div>

            <h3 class="text-center mb-4">Are you sure you want to delete this doctor?</h3>
            
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="card border-0 bg-light">
                        <div class="card-body">
                            <h4 class="text-center mb-3">@Model.Name</h4>
                            <dl class="row">
                                <dt class="col-sm-4">Username</dt>
                                <dd class="col-sm-8">@Model.UserName</dd>

                                <dt class="col-sm-4">Email</dt>
                                <dd class="col-sm-8">@Model.Email</dd>

                                <dt class="col-sm-4">Specialist</dt>
                                <dd class="col-sm-8">@Model.Specialist</dd>

                                <dt class="col-sm-4">Hospital</dt>
                                <dd class="col-sm-8">@(string.IsNullOrEmpty(Model.HospitalName) ? "Not Assigned" : Model.HospitalName)</dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>

            <div class="text-center mt-4">
                <form asp-action="Delete" method="post" class="d-inline">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger btn-lg me-3">
                        <i class="fas fa-trash-alt me-2"></i>Delete Doctor
                    </button>
                </form>
                <a asp-action="AllDoctors" class="btn btn-secondary btn-lg">
                    <i class="fas fa-arrow-left me-2"></i>Cancel
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        transition: transform 0.2s;
    }
    .card:hover {
        transform: translateY(-2px);
    }
</style>

