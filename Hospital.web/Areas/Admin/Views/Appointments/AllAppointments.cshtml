@model List<Hospital.Models.Appointment>

@{
    ViewData["Title"] = "All Appointments";
}

<div class="container py-4">
    <div class="card shadow-lg border-0 mb-4" style="border-radius: 1.25rem;">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2 class="fw-bold mb-0 text-gradient"><i class="fas fa-calendar-check me-2"></i>All Appointments</h2>
            </div>
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">@TempData["SuccessMessage"]</div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
            }
            <div class="table-responsive">
                <table class="table table-hover table-striped align-middle mb-0" style="border-radius: 1rem; overflow: hidden;">
                    <thead class="table-light">
                        <tr>
                            <th><i class="fas fa-stethoscope me-1"></i>Type</th>
                            <th><i class="fas fa-city me-1"></i>City</th>
                            <th><i class="fas fa-clock me-1"></i>Created Date</th>
                            <th><i class="fas fa-align-left me-1"></i>Description</th>
                            <th><i class="fas fa-user-md me-1"></i>Doctor</th>
                            <th><i class="fas fa-user-injured me-1"></i>Patient</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td><span class="badge bg-primary">@item.Type</span></td>
                                    <td>@item.City</td>
                                    <td><span class="badge bg-info text-dark">@item.CreatedDate.ToString("yyyy-MM-dd HH:mm")</span></td>
                                    <td>@item.Description</td>
                                    <td>@item.Doctor?.Name</td>
                                    <td>@item.Patient?.Name</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center text-muted">No appointments available.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .text-gradient {
        background: linear-gradient(90deg, #1976d2 0%, #67b26f 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        text-fill-color: transparent;
    }
    .table thead th {
        vertical-align: middle;
        font-weight: 600;
        font-size: 1.05rem;
    }
    .table-striped > tbody > tr:nth-of-type(odd) {
        background-color: #f8fbff;
    }
    .table-hover tbody tr:hover {
        background-color: #e3f0ff;
        transition: background 0.2s;
    }
    .badge {
        font-size: 0.98em;
        border-radius: 0.7em;
        padding: 0.5em 0.9em;
    }
</style>
