@model dynamic
@{
    ViewData["Title"] = "Admin Dashboard";
}

<style>
    .stats-card {
        background: linear-gradient(135deg, #e3f0ff 0%, #f8fbff 100%);
        border-radius: 18px;
        box-shadow: 0 4px 24px 0 rgba(25, 118, 210, 0.08);
        padding: 2rem 1.5rem 1.5rem 1.5rem;
        text-align: center;
        transition: transform 0.15s, box-shadow 0.15s;
        position: relative;
        min-height: 170px;
    }
    .stats-card:hover {
        transform: translateY(-4px) scale(1.03);
        box-shadow: 0 8px 32px 0 rgba(25, 118, 210, 0.16);
    }
    .stats-number {
        font-size: 2.5rem;
        font-weight: 800;
        color: #1976d2;
        margin-bottom: 0.5rem;
    }
    .stats-label {
        font-size: 1.1rem;
        color: #6c757d;
        font-weight: 500;
    }
    .card-header {
        background: linear-gradient(90deg, #1976d2 0%, #67b26f 100%);
        color: #fff;
        border-radius: 18px 18px 0 0;
        font-weight: 600;
        letter-spacing: 0.5px;
    }
    .card {
        border-radius: 18px;
        box-shadow: 0 2px 12px 0 rgba(25, 118, 210, 0.08);
    }
    .chart-container {
        min-height: 220px;
        height: 220px;
        position: relative;
    }
    .fab {
        position: fixed;
        bottom: 32px;
        right: 32px;
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background: linear-gradient(135deg, #1976d2 0%, #67b26f 100%);
        color: #fff;
        border: none;
        box-shadow: 0 4px 16px rgba(25, 118, 210, 0.18);
        font-size: 2rem;
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 1000;
        transition: background 0.2s, box-shadow 0.2s;
    }
    .fab:hover {
        background: linear-gradient(135deg, #67b26f 0%, #1976d2 100%);
        box-shadow: 0 8px 32px rgba(25, 118, 210, 0.22);
    }
    .widget-icon {
        width: 44px;
        height: 44px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        color: #fff;
        margin-bottom: 0.5rem;
    }
    .bg-primary { background: #1976d2 !important; }
    .bg-success { background: #43cea2 !important; }
    .bg-warning { background: #f7971e !important; }
    .bg-info { background: #00c6fb !important; }
    .bg-secondary { background: #6c757d !important; }
    .text-gradient {
        background: linear-gradient(90deg, #1976d2 0%, #67b26f 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        text-fill-color: transparent;
    }
    @@media (max-width: 991px) {
        .fab { right: 16px; bottom: 16px; }
    }
    /* Add subtle fade-in animation for cards */
    .stats-card, .card {
        animation: fadeInUp 0.7s cubic-bezier(0.23, 1, 0.32, 1);
    }
    @@keyframes fadeInUp {
        from { opacity: 0; transform: translateY(40px); }
        to { opacity: 1; transform: translateY(0); }
    }
    /* Add hover effect for quick action buttons */
    .btn-quick-action {
        background: linear-gradient(90deg, #1976d2 0%, #67b26f 100%);
        color: #fff;
        border: none;
        border-radius: 2rem;
        box-shadow: 0 2px 8px rgba(25, 118, 210, 0.12);
        transition: background 0.2s, box-shadow 0.2s;
    }
    .btn-quick-action:hover {
        background: linear-gradient(90deg, #67b26f 0%, #1976d2 100%);
        box-shadow: 0 4px 16px rgba(25, 118, 210, 0.18);
    }
    /* Chart container polish */
    .chart-container {
        background: #fff;
        border-radius: 18px;
        box-shadow: 0 2px 12px 0 rgba(25, 118, 210, 0.08);
        padding: 1.5rem;
        margin-bottom: 1rem;
    }
</style>

<div class="container-fluid">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h1 class="text-gradient mb-2">
                                <i class="fas fa-tachometer-alt me-3"></i>Admin Dashboard
                            </h1>
                            <p class="text-muted mb-0">Welcome back! Here's what's happening in your hospital today.</p>
                        </div>
                        <div class="d-flex gap-2">
                            <button class="btn btn-outline-primary">
                                <i class="fas fa-download me-2"></i>Export Report
                            </button>
                            <button class="btn btn-quick-action">
                                <i class="fas fa-plus me-2"></i>Quick Action
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Key Metrics -->
    <div class="row mb-4">
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="stats-card">
                <div class="stats-number">@Model.TotalPatients</div>
                <div class="stats-label">Total Patients</div>
                <div class="mt-3">
                    <span class="badge bg-success">
                        <i class="fas fa-users me-1"></i>Active
                    </span>
                    <span class="text-muted ms-2">registered patients</span>
                </div>
                <i class="fas fa-users fa-2x text-primary mt-3"></i>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="stats-card">
                <div class="stats-number">@Model.TotalAppointments</div>
                <div class="stats-label">Total Appointments</div>
                <div class="mt-3">
                    <span class="badge bg-warning">
                        <i class="fas fa-clock me-1"></i>Scheduled
                    </span>
                </div>
                <i class="fas fa-calendar-check fa-2x text-success mt-3"></i>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="stats-card">
                <div class="stats-number">@Model.TotalDoctors</div>
                <div class="stats-label">Total Doctors</div>
                <div class="mt-3">
                    <span class="badge bg-info">
                        <i class="fas fa-user-md me-1"></i>Available
                    </span>
                    <span class="text-muted ms-2">specialists</span>
                </div>
                <i class="fas fa-user-md fa-2x text-info mt-3"></i>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="stats-card">
                <div class="stats-number">@Model.AvailableRooms</div>
                <div class="stats-label">Available Rooms</div>
                <div class="mt-3">
                    <span class="badge bg-success">
                        <i class="fas fa-bed me-1"></i>@(Model.TotalRooms > 0 ? Math.Round((double)Model.AvailableRooms / Model.TotalRooms * 100, 1) : 0)% Available
                    </span>
                </div>
                <i class="fas fa-hospital fa-2x text-warning mt-3"></i>
            </div>
        </div>
    </div>

    <!-- Additional Stats Row -->
    <div class="row mb-4">
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="stats-card">
                <div class="stats-number">@Model.TotalHospitals</div>
                <div class="stats-label">Hospitals</div>
                <div class="mt-3">
                    <span class="badge bg-primary">
                        <i class="fas fa-hospital me-1"></i>Active
                    </span>
                </div>
                <i class="fas fa-hospital fa-2x text-primary mt-3"></i>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="stats-card">
                <div class="stats-number">@Model.TotalRooms</div>
                <div class="stats-label">Total Rooms</div>
                <div class="mt-3">
                    <span class="badge bg-secondary">
                        <i class="fas fa-door-open me-1"></i>All Types
                    </span>
                </div>
                <i class="fas fa-door-open fa-2x text-secondary mt-3"></i>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="stats-card">
                <div class="stats-number">@Model.TotalContacts</div>
                <div class="stats-label">Contact Messages</div>
                <div class="mt-3">
                    <span class="badge bg-info">
                        <i class="fas fa-envelope me-1"></i>Received
                    </span>
                </div>
                <i class="fas fa-envelope fa-2x text-info mt-3"></i>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="stats-card">
                <div class="stats-number">@(Model.TotalRooms - Model.AvailableRooms)</div>
                <div class="stats-label">Occupied Rooms</div>
                <div class="mt-3">
                    <span class="badge bg-warning">
                        <i class="fas fa-bed me-1"></i>In Use
                    </span>
                </div>
                <i class="fas fa-bed fa-2x text-warning mt-3"></i>
            </div>
        </div>
    </div>

    <!-- Charts Row -->
    <div class="row mb-4">
        <div class="col-lg-8 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-chart-line me-2"></i>Recent Appointments
                    </h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Appointment</th>
                                    <th>Patient</th>
                                    <th>Doctor</th>
                                    <th>Date</th>
                                    <th>Type</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.RecentAppointments != null && Model.RecentAppointments.Count > 0)
                                {
                                    @foreach (var appointment in Model.RecentAppointments)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="widget-icon bg-primary me-3">
                                                        <i class="fas fa-calendar-check"></i>
                                                    </div>
                                                    <div>
                                                        <strong>@appointment.Number</strong>
                                                        <br><small class="text-muted">@appointment.Description</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>@(appointment.Patient?.Name ?? "N/A")</td>
                                            <td>@(appointment.Doctor?.Name ?? "N/A")</td>
                                            <td>@appointment.CreatedDate.ToString("MMM dd, yyyy")</td>
                                            <td><span class="badge bg-info">@appointment.Type</span></td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center text-muted">
                                            <i class="fas fa-calendar-times fa-2x mb-2"></i>
                                            <br>No recent appointments
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-chart-pie me-2"></i>User Distribution
                    </h5>
                </div>
                <div class="card-body">
                    <div class="chart-container">
                        <canvas id="userDistributionChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity & Quick Actions -->
    <div class="row mb-4">
        <div class="col-lg-8 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-history me-2"></i>Recent Activity
                    </h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Activity</th>
                                    <th>User</th>
                                    <th>Time</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.RecentDoctors != null && Model.RecentDoctors.Count > 0)
                                {
                                    @foreach (var doctor in Model.RecentDoctors.Take(3))
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="widget-icon bg-success me-3">
                                                        <i class="fas fa-user-md"></i>
                                                    </div>
                                                    <div>
                                                        <strong>New Doctor Registration</strong>
                                                        <br><small class="text-muted">@doctor.Name joined</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>@doctor.Name</td>
                                            <td>Recently</td>
                                            <td><span class="badge bg-success">Active</span></td>
                                        </tr>
                                    }
                                }
                                @if (Model.RecentPatients != null && Model.RecentPatients.Count > 0)
                                {
                                    @foreach (var patient in Model.RecentPatients.Take(2))
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="widget-icon bg-primary me-3">
                                                        <i class="fas fa-user"></i>
                                                    </div>
                                                    <div>
                                                        <strong>New Patient Registration</strong>
                                                        <br><small class="text-muted">@patient.Name registered</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>@patient.Name</td>
                                            <td>Recently</td>
                                            <td><span class="badge bg-primary">Registered</span></td>
                                        </tr>
                                    }
                                }
                                @if ((Model.RecentDoctors == null || Model.RecentDoctors.Count == 0) && 
                                     (Model.RecentPatients == null || Model.RecentPatients.Count == 0))
                                {
                                    <tr>
                                        <td colspan="4" class="text-center text-muted">
                                            <i class="fas fa-history fa-2x mb-2"></i>
                                            <br>No recent activity
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-bolt me-2"></i>Quick Actions
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-3">
                        <a href="/Admin/Users/AllDoctors" class="btn btn-primary">
                            <i class="fas fa-user-md me-2"></i>Manage Doctors
                        </a>
                        <a href="/Admin/Appointments/AllAppointments" class="btn btn-success">
                            <i class="fas fa-calendar-plus me-2"></i>View Appointments
                        </a>
                        <a href="/Admin/Hospitals" class="btn btn-info">
                            <i class="fas fa-hospital me-2"></i>Manage Hospitals
                        </a>
                        <a href="/Admin/Rooms" class="btn btn-warning">
                            <i class="fas fa-bed me-2"></i>Manage Rooms
                        </a>
                        <a href="/Admin/Contacts" class="btn btn-secondary">
                            <i class="fas fa-address-book me-2"></i>View Contacts
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- System Status & Notifications -->
    <div class="row">
        <div class="col-lg-6 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-server me-2"></i>System Status
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-6 mb-3">
                            <div class="widget">
                                <div class="widget-header">
                                    <h6 class="widget-title">Database</h6>
                                    <span class="status-indicator status-online"></span>
                                </div>
                                <div class="progress-custom">
                                    <div class="progress-bar" style="width: 95%"></div>
                                </div>
                                <small class="text-muted">95% healthy</small>
                            </div>
                        </div>
                        <div class="col-6 mb-3">
                            <div class="widget">
                                <div class="widget-header">
                                    <h6 class="widget-title">Users</h6>
                                    <span class="status-indicator status-online"></span>
                                </div>
                                <div class="progress-custom">
                                    <div class="progress-bar" style="width: @(Model.TotalDoctors + Model.TotalPatients > 0 ? Math.Min(100, (Model.TotalDoctors + Model.TotalPatients) * 10) : 0)%"></div>
                                </div>
                                <small class="text-muted">@(Model.TotalDoctors + Model.TotalPatients) registered</small>
                            </div>
                        </div>
                        <div class="col-6 mb-3">
                            <div class="widget">
                                <div class="widget-header">
                                    <h6 class="widget-title">Rooms</h6>
                                    <span class="status-indicator status-online"></span>
                                </div>
                                <div class="progress-custom">
                                    <div class="progress-bar" style="width: @(Model.TotalRooms > 0 ? Math.Round((double)Model.AvailableRooms / Model.TotalRooms * 100, 0) : 0)%"></div>
                                </div>
                                <small class="text-muted">@Model.AvailableRooms available</small>
                            </div>
                        </div>
                        <div class="col-6 mb-3">
                            <div class="widget">
                                <div class="widget-header">
                                    <h6 class="widget-title">Appointments</h6>
                                    <span class="status-indicator status-online"></span>
                                </div>
                                <div class="progress-custom">
                                    <div class="progress-bar" style="width: @(Model.TotalAppointments > 0 ? Math.Min(100, Model.TotalAppointments * 20) : 0)%"></div>
                                </div>
                                <small class="text-muted">@Model.TotalAppointments scheduled</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-bell me-2"></i>Notifications
                        <span class="notification-badge">@(Model.TotalContacts + Model.TotalAppointments)</span>
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-flex align-items-start mb-3">
                        <div class="widget-icon bg-info me-3">
                            <i class="fas fa-calendar-check"></i>
                        </div>
                        <div>
                            <h6 class="mb-1">Appointments</h6>
                            <p class="text-muted small mb-0">@Model.TotalAppointments appointments scheduled</p>
                            <small class="text-muted">Today</small>
                        </div>
                    </div>
                    <div class="d-flex align-items-start mb-3">
                        <div class="widget-icon bg-success me-3">
                            <i class="fas fa-user-md"></i>
                        </div>
                        <div>
                            <h6 class="mb-1">Doctors</h6>
                            <p class="text-muted small mb-0">@Model.TotalDoctors doctors available</p>
                            <small class="text-muted">Active</small>
                        </div>
                    </div>
                    <div class="d-flex align-items-start mb-3">
                        <div class="widget-icon bg-warning me-3">
                            <i class="fas fa-bed"></i>
                        </div>
                        <div>
                            <h6 class="mb-1">Rooms</h6>
                            <p class="text-muted small mb-0">@Model.AvailableRooms rooms available</p>
                            <small class="text-muted">Ready</small>
                        </div>
                    </div>
                    <div class="d-flex align-items-start">
                        <div class="widget-icon bg-primary me-3">
                            <i class="fas fa-envelope"></i>
                        </div>
                        <div>
                            <h6 class="mb-1">Messages</h6>
                            <p class="text-muted small mb-0">@Model.TotalContacts contact messages</p>
                            <small class="text-muted">Received</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Floating Action Button -->
<button class="fab" title="Quick Actions">
    <i class="fas fa-plus"></i>
</button>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // User Distribution Chart
        document.addEventListener('DOMContentLoaded', function () {
            var ctx = document.getElementById('userDistributionChart');
            if (ctx) {
                new Chart(ctx, {
                    type: 'doughnut',
                    data: {
                        labels: ['Doctors', 'Patients', 'Admins'],
                        datasets: [{
                            data: [@Model.TotalDoctors, @Model.TotalPatients, 1],
                            backgroundColor: ['#1976d2', '#43cea2', '#f7971e'],
                            borderWidth: 2
                        }]
                    },
                    options: {
                        responsive: true,
                        plugins: {
                            legend: { position: 'bottom' }
                        }
                    }
                });
            }
        });

        // Floating Action Button
        document.querySelector('.fab').addEventListener('click', function() {
            // Add your quick action logic here
            alert('Quick action menu would open here!');
        });
    </script>
} 