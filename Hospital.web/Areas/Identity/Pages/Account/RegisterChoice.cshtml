@page
@model dynamic
@{
    ViewData["Title"] = "Choose Registration Type";
}
<div class="container d-flex align-items-center justify-content-center min-vh-100 bg-light">
    <div class="card shadow-lg p-4" style="max-width: 420px; width: 100%; border-radius: 1.25rem;">
        <div class="text-center mb-4">
            <i class="fas fa-user-plus fa-3x text-gradient mb-2"></i>
            <h2 class="fw-bold mb-1" style="color: #1976d2;">Register</h2>
            <p class="text-muted mb-0">Choose your registration type</p>
        </div>
        <div class="d-grid gap-3">
            <a asp-area="Identity" asp-page="/Account/DoctorRegister" class="btn btn-outline-primary btn-lg py-3" style="border-radius: 2rem; font-size: 1.2rem;">
                <i class="fas fa-user-md me-2"></i>Doctor Registration
            </a>
            <a asp-area="Identity" asp-page="/Account/PatientRegister" class="btn btn-outline-success btn-lg py-3" style="border-radius: 2rem; font-size: 1.2rem;">
                <i class="fas fa-user-injured me-2"></i>Register as Patient
            </a>
        </div>
    </div>
</div>
<style>
    .text-gradient {
        background: linear-gradient(90deg, #1976d2 0%, #67b26f 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        text-fill-color: transparent;
    }
</style> 