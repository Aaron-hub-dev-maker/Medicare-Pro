@page
@using Hospital.Models
@model DoctorRegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container-fluid registration-container">
    <div class="row justify-content-center align-items-center min-vh-100">
        <div class="col-lg-8 col-xl-6">
            <div class="card shadow-lg border-0 registration-card">
                <div class="card-body p-5">
                    <!-- Header -->
                    <div class="text-center mb-5">
                        <div class="mb-4">
                            <i class="fas fa-user-md fa-3x text-gradient"></i>
                        </div>
                        <h1 class="text-gradient h2 mb-2">Doctor Registration</h1>
                        <p class="text-muted">Join our team and provide quality healthcare services</p>
                    </div>

                    <!-- Registration Form -->
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <div class="row g-4">
                            <!-- Personal Information -->
                            <div class="col-md-6">
                                <h5 class="mb-4">
                                    <i class="fas fa-user me-2"></i>Personal Information
                                </h5>
                                <div class="form-floating mb-4">
                                    <input asp-for="Input.Name" class="form-control" aria-required="true" placeholder="Full Name" required />
                                    <label asp-for="Input.Name"><i class="fas fa-user me-2"></i>Full Name</label>
                                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                                </div>
                                <div class="form-floating mb-4">
                                    <select asp-for="Input.Gender" asp-items="@Html.GetEnumSelectList<Gender>()" class="form-control" aria-required="true" required>
                                        <option value="-1">Select Gender</option>
                                    </select>
                                    <label asp-for="Input.Gender"><i class="fas fa-venus-mars me-2"></i>Gender</label>
                                    <span asp-validation-for="Input.Gender" class="text-danger"></span>
                                </div>
                                <div class="form-floating mb-4">
                                    <input asp-for="Input.DOB" type="date" class="form-control" placeholder="Date of Birth" />
                                    <label asp-for="Input.DOB"><i class="fas fa-birthday-cake me-2"></i>Date of Birth</label>
                                    <span asp-validation-for="Input.DOB" class="text-danger"></span>
                                </div>
                                <div class="form-floating mb-4">
                                    <input asp-for="Input.Nationality" class="form-control" aria-required="true" placeholder="Nationality" required />
                                    <label asp-for="Input.Nationality"><i class="fas fa-flag me-2"></i>Nationality</label>
                                    <span asp-validation-for="Input.Nationality" class="text-danger"></span>
                                </div>
                                <div class="form-floating mb-4">
                                    <input asp-for="Input.Specialist" class="form-control" aria-required="true" placeholder="Specialist" required />
                                    <label asp-for="Input.Specialist"><i class="fas fa-user-md me-2"></i>Specialist</label>
                                    <span asp-validation-for="Input.Specialist" class="text-danger"></span>
                                </div>
                                <div class="form-group mb-4">
                                    <label asp-for="Input.HospitalInfoId" class="control-label"><i class="fas fa-hospital me-2"></i>Hospital</label>
                                    <select asp-for="Input.HospitalInfoId" class="form-control" asp-items="@(new SelectList(Model.Hospitals, "Id", "Name"))" required>
                                        <option value="">-- Select Hospital --</option>
                                    </select>
                                    <span asp-validation-for="Input.HospitalInfoId" class="text-danger"></span>
                                </div>
                            </div>
                            <!-- Contact Information -->
                            <div class="col-md-6">
                                <h5 class="mb-4">
                                    <i class="fas fa-address-book me-2"></i>Contact Information
                                </h5>
                                <div class="form-floating mb-4">
                                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" required />
                                    <label asp-for="Input.Email"><i class="fas fa-envelope me-2"></i>Email Address</label>
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                                <div class="form-floating mb-4">
                                    <input asp-for="Input.City" class="form-control" placeholder="City" />
                                    <label asp-for="Input.City"><i class="fas fa-city me-2"></i>City</label>
                                    <span asp-validation-for="Input.City" class="text-danger"></span>
                                </div>
                                <div class="form-floating mb-4">
                                    <textarea asp-for="Input.Address" class="form-control" aria-required="true" placeholder="Address" style="height: 100px" required></textarea>
                                    <label asp-for="Input.Address"><i class="fas fa-map-marker-alt me-2"></i>Address</label>
                                    <span asp-validation-for="Input.Address" class="text-danger"></span>
                                </div>
                                <div class="form-floating mb-4">
                                    <input asp-for="Input.PictureUrl" class="form-control" aria-required="true" placeholder="Profile Picture URL" required />
                                    <label asp-for="Input.PictureUrl"><i class="fas fa-image me-2"></i>Profile Picture URL</label>
                                    <span asp-validation-for="Input.PictureUrl" class="text-danger"></span>
                                </div>
                                <div class="form-check mb-4">
                                    <input type="checkbox" asp-for="Input.IsDoctor" class="form-check-input" aria-required="true" />
                                    <label asp-for="Input.IsDoctor" class="form-check-label">I confirm I am registering as a doctor</label>
                                    <span asp-validation-for="Input.IsDoctor" class="text-danger"></span>
                                </div>
                            </div>
                            <!-- Security Information -->
                            <div class="col-12">
                                <hr class="my-5">
                                <h5 class="mb-4">
                                    <i class="fas fa-shield-alt me-2"></i>Security Information
                                </h5>
                                <div class="row g-4">
                                    <div class="col-md-6">
                                        <div class="form-floating mb-4">
                                            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" required />
                                            <label asp-for="Input.Password"><i class="fas fa-lock me-2"></i>Password</label>
                                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                                            <div class="password-strength mt-3">
                                                <div class="progress" style="height: 4px;">
                                                    <div class="progress-bar" role="progressbar" style="width: 0%"></div>
                                                </div>
                                                <small class="text-muted">Password strength</small>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating mb-4">
                                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="confirm password" required />
                                            <label asp-for="Input.ConfirmPassword"><i class="fas fa-lock me-2"></i>Confirm Password</label>
                                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- Terms and Conditions -->
                            <div class="col-12">
                                <div class="form-check mb-4">
                                    <input class="form-check-input" type="checkbox" id="termsCheck" required>
                                    <label class="form-check-label" for="termsCheck">
                                        I agree to the <a href="#" class="text-decoration-none">Terms of Service</a>, 
                                        <a href="#" class="text-decoration-none">Privacy Policy</a>, and 
                                        <a href="#" class="text-decoration-none">User Rights and Responsibilities</a>
                                    </label>
                                </div>
                            </div>
                            <!-- Submit Button -->
                            <div class="col-12">
                                <div class="d-grid">
                                    <button id="registerSubmit" type="submit" class="btn btn-primary btn-lg">
                                        <i class="fas fa-user-md me-2"></i>Register
                                    </button>
                                </div>
                            </div>
                            <!-- Login Link -->
                            <div class="col-12 text-center">
                                <p class="mb-0">
                                    Already have an account? 
                                    <a asp-page="./Login" class="text-decoration-none">
                                        <i class="fas fa-sign-in-alt me-1"></i>Sign in here
                                    </a>
                                </p>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

