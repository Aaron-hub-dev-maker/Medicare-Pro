@{
    ViewData["Title"] = "Home";
    var imageUrl = Url.Content("~/images/Best-Hospital-Management-Software-in-Pakistan.png");
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />

<style>
    body, html {
        margin: 0;
        padding: 0;
        font-family: 'Segoe UI', 'Roboto', Arial, sans-serif;
        background: #f4f8fb;
    }

    .welcome-banner {
        background-image: linear-gradient(rgba(0, 0, 0, 0.45), rgba(0, 0, 0, 0.6)), url('@imageUrl');
        background-size: cover;
        background-position: center;
        min-height: 80vh;
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        overflow: hidden;
        animation: fadeIn 1.5s ease-in-out;
    }

    .glass-card {
        background: rgba(255, 255, 255, 0.18);
        box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.18);
        backdrop-filter: blur(8px);
        -webkit-backdrop-filter: blur(8px);
        border-radius: 24px;
        border: 1.5px solid rgba(255, 255, 255, 0.25);
        padding: 48px 36px 36px 36px;
        text-align: center;
        color: #fff;
        max-width: 480px;
        width: 90%;
        z-index: 2;
        position: relative;
        margin-top: 40px;
    }

        .glass-card h1 {
            font-size: 2.8rem;
            font-weight: 800;
            margin-bottom: 18px;
            letter-spacing: 1px;
            text-shadow: 2px 2px 8px rgba(0,0,0,0.25);
        }

        .glass-card p {
            font-size: 1.3rem;
            margin-bottom: 32px;
            color: #e0e0e0;
        }

    .btn-explore {
        background: linear-gradient(90deg, #00c6fb 0%, #005bea 100%);
        color: white;
        padding: 14px 36px;
        font-size: 1.2rem;
        border: none;
        border-radius: 30px;
        transition: background 0.3s, transform 0.2s;
        text-decoration: none;
        cursor: pointer;
        font-weight: 600;
        box-shadow: 0 2px 12px rgba(0, 123, 255, 0.15);
    }

        .btn-explore:hover {
            background: linear-gradient(90deg, #005bea 0%, #00c6fb 100%);
            transform: translateY(-2px) scale(1.04);
        }

    .svg-icons {
        display: flex;
        justify-content: center;
        gap: 32px;
        margin-bottom: 24px;
        margin-top: -40px;
    }

        .svg-icons i {
            font-size: 2.5rem;
            color: #00c6fb;
            background: rgba(255,255,255,0.18);
            border-radius: 50%;
            padding: 18px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.10);
            transition: color 0.3s, background 0.3s, transform 0.2s;
        }

            .svg-icons i:hover {
                color: #005bea;
                background: rgba(255,255,255,0.35);
                transform: scale(1.12);
            }
    /* Wave divider */
    .wave-divider {
        position: absolute;
        bottom: -1px;
        left: 0;
        width: 100%;
        z-index: 1;
        line-height: 0;
    }
    /* Highlights section */
    .highlights {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 32px;
        margin: 0 auto;
        margin-top: -60px;
        padding: 48px 0 24px 0;
        max-width: 1100px;
        z-index: 3;
        position: relative;
    }

    .highlight-card {
        background: #fff;
        border-radius: 18px;
        box-shadow: 0 4px 24px rgba(0, 123, 255, 0.08);
        padding: 32px 28px 24px 28px;
        text-align: center;
        width: 260px;
        min-height: 220px;
        transition: box-shadow 0.3s, transform 0.2s;
        cursor: pointer;
        border: 1.5px solid #f0f4fa;
    }

        .highlight-card:hover {
            box-shadow: 0 8px 32px rgba(0, 123, 255, 0.18);
            transform: translateY(-6px) scale(1.03);
        }

        .highlight-card i {
            font-size: 2.2rem;
            color: #005bea;
            margin-bottom: 16px;
        }

        .highlight-card h3 {
            font-size: 1.25rem;
            font-weight: 700;
            margin-bottom: 10px;
            color: #222;
        }

        .highlight-card p {
            font-size: 1rem;
            color: #666;
            margin-bottom: 0;
        }

    @@media (max-width: 900px) {
        .highlights {
            gap: 18px;
        }

        .highlight-card {
            width: 200px;
            padding: 24px 12px 18px 12px;
        }
    }

    @@media (max-width: 600px) {
        .welcome-banner {
            min-height: 60vh;
        }

        .glass-card {
            padding: 28px 8px 18px 8px;
            max-width: 98vw;
        }

        .svg-icons {
            gap: 16px;
        }

        .highlights {
            flex-direction: column;
            align-items: center;
            gap: 18px;
            margin-top: -30px;
        }

        .highlight-card {
            width: 90vw;
            min-width: unset;
        }
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<div class="welcome-banner">
    <div class="glass-card">
        <div class="svg-icons">
            <i class="fas fa-user-md" title="Doctors"></i>
            <i class="fas fa-heartbeat" title="Care"></i>
            <i class="fas fa-stethoscope" title="Stethoscope"></i>
            <i class="fas fa-hospital" title="Hospital"></i>
        </div>
        <h1>Welcome to SmartCare Hospital System</h1>
        <p>Your trusted partner in modern healthcare management</p>
        <a href="/Dashboard" class="btn-explore">Explore Now</a>
    </div>
    <div class="wave-divider">
        <svg viewBox="0 0 1440 120" width="100%" height="120" xmlns="http://www.w3.org/2000/svg"><path fill="#f4f8fb" fill-opacity="1" d="M0,64L60,74.7C120,85,240,107,360,112C480,117,600,107,720,90.7C840,75,960,53,1080,53.3C1200,53,1320,75,1380,85.3L1440,96L1440,120L1380,120C1320,120,1200,120,1080,120C960,120,840,120,720,120C600,120,480,120,360,120C240,120,120,120,60,120L0,120Z"></path></svg>
    </div>
</div>

<div class="highlights">
    <a href="/Patient/Appointments/BookAppointment" class="highlight-card">
        <i class="fas fa-calendar-check"></i>
        <h3>Book Appointment</h3>
        <p>Schedule your visit with our expert doctors in just a few clicks.</p>
    </a>
    <a href="/Doctors" class="highlight-card">
        <i class="fas fa-user-nurse"></i>
        <h3>Our Doctors</h3>
        <p>Meet our qualified and compassionate medical professionals.</p>
    </a>
    <a href="/Patients" class="highlight-card">
        <i class="fas fa-procedures"></i>
        <h3>Patient Portal</h3>
        <p>Access your health records, bills, and more securely online.</p>
    </a>
    <a href="/Contact" class="highlight-card">
        <i class="fas fa-phone-volume"></i>
        <h3>Contact Us</h3>
        <p>We’re here to help you 24/7. Reach out for any assistance.</p>
    </a>
</div>